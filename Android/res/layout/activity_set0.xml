<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.x001test.MActivity" >

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_drkkb"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:text="导入课程表" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_1"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_czsj"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:text="重置系统时间" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_2"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/et_y"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:hint="年"
                android:inputType="number"
                android:textColor="@color/red" />

            <EditText
                android:id="@+id/et_m"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:hint="月"
                android:inputType="number"
                android:textColor="@color/red" />

            <EditText
                android:id="@+id/et_d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:hint="日"
                android:inputType="number"
                android:textColor="@color/red" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/et_h"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:hint="时"
                android:inputType="number"
                android:textColor="@color/red" />

            <EditText
                android:id="@+id/et_f"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:hint="分"
                android:inputType="number"
                android:textColor="@color/red" />

            <EditText
                android:id="@+id/et_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:hint="秒"
                android:inputType="number"
                android:textColor="@color/red" />

            <EditText
                android:id="@+id/et_w"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:hint="星期"
                android:inputType="number"
                android:textColor="@color/red" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_zdjz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_selector"
                android:text="自动校准" />

            <Button
                android:id="@+id/btn_qd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_selector"
                android:text="确定" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ll_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_3"
        android:layout_marginBottom="10dp" >

        <EditText
            android:id="@+id/et_wdjz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hint="请输入差值"
            android:textColor="@color/red"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_wdjz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_wdjz"
            android:layout_weight="1"
            android:background="@drawable/button_selector"
            android:text="温度校正" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_4"
        android:layout_marginBottom="10dp" >

        <EditText
            android:id="@+id/et_sdjz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hint="请输入差值"
            android:textColor="@color/red"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_sdjz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_sdjz"
            android:layout_weight="1"
            android:background="@drawable/button_selector"
            android:text="湿度校正" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_5"
        android:layout_marginBottom="10dp" >

        <EditText
            android:id="@+id/et_wqjz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hint="请输入差值"
            android:textColor="@color/red"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_wqjz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_wqjz"
            android:background="@drawable/button_selector"
            android:text="光强校正" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_6"
        android:layout_marginBottom="10dp" >

        <TextView
            android:id="@+id/tv_sktx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上课提醒："
            android:textColor="@color/white"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/ll_sktx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/ib_sktx"
            android:layout_toRightOf="@+id/tv_sktx"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_sktxd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30分钟"
                android:textColor="@color/yellow"
                android:textSize="20dp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/ib_sktx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/on" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_7"
        android:layout_marginBottom="10dp" >

        <TextView
            android:id="@+id/tv_kstx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="考试提醒："
            android:textColor="@color/white"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/ll_kstx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/ib_kstx"
            android:layout_toRightOf="@+id/tv_kstx"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_kstxd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="前一天8：00"
                android:textColor="@color/yellow"
                android:textSize="20dp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/ib_kstx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/on" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_8"
        android:layout_marginBottom="10dp" >

        <TextView
            android:id="@+id/tv_znkd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="智能开灯："
            android:textColor="@color/white"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/ll_znkd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/ib_znkd"
            android:layout_toRightOf="@+id/tv_znkd"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_znkdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60~1000"
                android:textColor="@color/yellow"
                android:textSize="20dp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/ib_znkd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/on" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_70"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_9"
        android:layout_marginBottom="10dp" >

        <TextView
            android:id="@+id/tv_znkfs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="智能风扇："
            android:textColor="@color/white"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/ll_znkfs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/ib_znkfs"
            android:layout_toRightOf="@+id/tv_znkfs"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_znkfsd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25~30"
                android:textColor="@color/yellow"
                android:textSize="20dp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/ib_znkfs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/on" />
    </RelativeLayout>

</RelativeLayout>